<Page x:Class="projet.ProgrammePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:projet"
      mc:Ignorable="d" 
      Title="ProgrammePage">

    <Grid x:Name="GlobalGrid" Background="#317AC7" >
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" VerticalAlignment="Center" >

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="10*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" x:Name="Button" Width="50" Height="30" HorizontalAlignment="Left" VerticalAlignment="Bottom"
                     Margin="30 0 0 0" Click="GoBack_To_Home" >
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Image Source="/Pages/images/revenir.png" Height="25" Width="25" Stretch="Uniform"  />
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <TextBlock Grid.Column="1" Text="Cree un programme" Width="200" VerticalAlignment="Center"
                       HorizontalAlignment="Center" TextAlignment="Center" FontSize="23"
                       Foreground="White" FontWeight="SemiBold" FontFamily="Montserrat"
                       ></TextBlock>

            <Button Grid.Column="2" x:Name="NextPage" Click="NextPage_Click" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0 0 20 0" Height="40" Width="Auto" >
                Next
            </Button>


        </Grid>


        <ScrollViewer Grid.Row="1" Name="Grid_InstructionsScrollViewer">

            <Grid x:Name="Grid_Instructions" >

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="75" ></ColumnDefinition>
                    <ColumnDefinition Width="*" ></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="1" x:Name="Grid_Inst" >

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" ></RowDefinition>
                        <RowDefinition Height="*" ></RowDefinition>
                        <RowDefinition Height="*" ></RowDefinition>
                        <RowDefinition Height="*" ></RowDefinition>
                        <RowDefinition Height="*" ></RowDefinition>
                        <RowDefinition Height="*" ></RowDefinition>
                    </Grid.RowDefinitions>

                    <local:Instruction_Ligne Grid.Column="1" Grid.Row="0" />


                </Grid>


                <!-- The left bar -->

                <Border Grid.Column="0" Background="#DAF3FF" Margin="0 10 15 0" CornerRadius="0 20 0 0" >

                    <StackPanel x:Name="leftColumnGrid" >

                        <TextBlock Text="1" FontSize="25" FontWeight="Bold" Foreground="#4E719D"
                           FontFamily="Montserrat" TextAlignment="Center" Margin="0 20"
                           Height="Auto" Width="Auto"
                           ></TextBlock>
                        <!--
                <TextBlock Text="2" FontSize="27" FontWeight="Bold" Foreground="#4E719D"
                           FontFamily="Montserrat" TextAlignment="Center" Margin="0 25"
                           Height="Auto" Width="Auto"
                           ></TextBlock>

                <TextBlock Text="3" FontSize="27" FontWeight="Bold" Foreground="#4E719D"
                           FontFamily="Montserrat" TextAlignment="Center" Margin="0 25"
                           Height="Auto" Width="Auto"
                           ></TextBlock>

                <TextBlock Text="4" FontSize="27" FontWeight="Bold" Foreground="#4E719D"
                           FontFamily="Montserrat" TextAlignment="Center" Margin="0 25"
                           Height="Auto" Width="Auto"
                           ></TextBlock>

                <TextBlock Text="5" FontSize="27" FontWeight="Bold" Foreground="#4E719D"
                           FontFamily="Montserrat" TextAlignment="Center" Margin="0 25"
                           Height="Auto" Width="Auto"
                           ></TextBlock>
                    
                <TextBlock Text="6" FontSize="27" FontWeight="Bold" Foreground="#4E719D"
                           FontFamily="Montserrat" TextAlignment="Center" Margin="0 25"
                           Height="Auto" Width="Auto"
                           ></TextBlock>
-->

                    </StackPanel>
                </Border>

                <!-- ************************************************** -->

            </Grid>

        </ScrollViewer>

        <Grid Grid.Row="2" Height="40" Width="60" Background="#DAF3FF" VerticalAlignment="Center" HorizontalAlignment="Left" RenderTransformOrigin="0.267,0.417" >

            <Button x:Name="ButtonAdd" BorderThickness="0" Background="Transparent" Click="AddInstruction_Click" HorizontalAlignment="Center" VerticalAlignment="Top" Padding="0" >

