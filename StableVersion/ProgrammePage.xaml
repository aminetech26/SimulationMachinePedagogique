            </Button>

        </Grid>
        <Button  x:Name="SavePage" Click="SaveButton_Click"  Margin="110,78,169,2" Height="40" Width="50" Grid.RowSpan="2" Grid.Row="1" >
            Save
        </Button>
        <Button  x:Name="LoadPage" Click="LoadButton_Click"  Margin="76,78,24,2" Height="40" Width="50" Grid.RowSpan="2" Grid.Row="1" >
            Load
        </Button>
    </Grid>

</Page>
